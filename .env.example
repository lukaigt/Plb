# OpenRouter API Key (for AI predictions)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Polymarket Wallet Private Key (Metamask wallet connected to Polymarket)
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# Polymarket CLOB API Credentials (get from Polymarket Builder's Dashboard)
# Go to: https://polymarket.com -> Settings -> API Keys -> Create API Key
POLY_API_KEY=your_poly_api_key_here
POLY_API_SECRET=your_poly_api_secret_here
POLY_PASSPHRASE=your_poly_passphrase_here

# Trading Settings
MAX_TRADE_SIZE=5
DAILY_LOSS_LIMIT=15

# Dashboard Port (default 4000, change if needed)
PORT=4000

# Bot Scan Interval in seconds (how often to check markets)
SCAN_INTERVAL=120

# Proxy URL (optional - use to avoid Cloudflare blocking)
# Format: http://username:password@host:port or http://host:port
# PROXY_URL=http://user:pass@proxy-server.com:8080
